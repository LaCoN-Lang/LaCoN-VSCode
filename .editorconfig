[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = tab
indent_size = 2

[*.{ts,tsx,js,jsx,mts,cts}]
indent_style = tab
indent_size = 2

[*.{html,css,scss}]
indent_style = tab
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
