{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": ["ES2020", "DOM"],
		"types": ["vscode", "node"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",

		"forceConsistentCasingInFileNames": true,

		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", ".vscode-test"]
}
