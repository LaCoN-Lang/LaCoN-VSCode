{
	"name": "lacon",
	"displayName": "LaCoN Syntax Highlight",
	"description": "LaCoN (Layout Configuration Notation) syntax highlight.",
	"publisher": "YallaNkardaz",
	"version": "0.1.4",
	"engines": {
		"vscode": "^1.108.1"
	},
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"build": "vsce package",
		"page": "start https://marketplace.visualstudio.com/items?itemName=YallaNkardaz.lacon",
		"manage": "start https://marketplace.visualstudio.com/manage/",
		"watch": "tsc -watch -p ./"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/LaCoN-Lang/LaCoN-VSCode.git"
	},
	"activationEvents": [],
	"icon": "icons/icon.png",
	"contributes": {
		"commands": [],
		"menus": {
			"editor/title": []
		},
		"languages": [
			{
				"id": "lacon",
				"aliases": [
					"LaCoN",
					"lacon"
				],
				"extensions": [
					".lacon"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/icon.svg",
					"light": "./icons/icon.svg"
				}
			},
			{
				"id": "llacon",
				"aliases": [
					"LLaCoN",
					"List LaCoN",
					"llacon"
				],
				"extensions": [
					".llacon"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/icon.svg",
					"light": "./icons/icon.svg"
				}
			},
			{
				"id": "slacon",
				"aliases": [
					"SLaCoN",
					"Static LaCoN",
					"slacon"
				],
				"extensions": [
					".slacon"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "./icons/icon.svg",
					"light": "./icons/icon.svg"
				}
			}
		],
		"grammars": [
			{
				"language": "lacon",
				"scopeName": "source.lacon",
				"path": "./syntaxes/lacon.tmLanguage.json"
			},
			{
				"language": "llacon",
				"scopeName": "source.llacon",
				"path": "./syntaxes/llacon.tmLanguage.json"
			},
			{
				"language": "slacon",
				"scopeName": "source.slacon",
				"path": "./syntaxes/slacon.tmLanguage.json"
			}
		]
	},
	"devDependencies": {
		"@types/node": "^25.2.0",
		"@types/vscode": "^1.108.1"
	},
	"dependencies": {
		"@vscode/l10n": "^0.0.18",
		"vscode-languageclient": "^9.0.1"
	}
}
